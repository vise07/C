#include <stdio.h>
int isPrimo(int num) {
    if (num <= 1) {
        return 0;
    }
    for (int i = 2; i * i <= num; ++i) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int main() {
    int N;
    printf("Inserisci un numero intero positivo N: ");
    scanf("%d", &N);
    int somma = 0;
    int contatore = 0;
    int i = 2;
    while (contatore < N) {
        if (isPrimo(i)) {
            if (contatore % 2 == 0) {
                somma += i;
            }
            contatore++;
        }
        i++;
    }
    printf("La somma dei primi %d numeri primi alternati Ã¨: %d\n", N, somma);
return 0;
}
